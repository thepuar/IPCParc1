<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLCursosController">
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tvCursos" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columns>
                <TableColumn fx:id="tttleColumn" prefWidth="75.0" text="Curso" />
                <TableColumn fx:id="profesorColumn" prefWidth="75.0" text="Profesor" />
                  <TableColumn fx:id="maxColumn" prefWidth="75.0" text="Máximo Alumnos" />
                  <TableColumn fx:id="dateIniColumn" prefWidth="75.0" text="Fecha inicio" />
                  <TableColumn fx:id="dateEndColumn" prefWidth="75.0" text="Fecha fin" />
                  <TableColumn fx:id="hourColumn" prefWidth="75.0" text="Hora" />
                  <TableColumn fx:id="daysWeekColumn" prefWidth="75.0" text="Dias de la semana" />
                  <TableColumn fx:id="roomColumn" prefWidth="75.0" text="Aula" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
   </center>
   <top>
      <HBox alignment="CENTER" minHeight="50.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btAdd" mnemonicParsing="false" text="Añadir" />
            <Button fx:id="btDel" mnemonicParsing="false" text="Borrar" />
         </children>
      </HBox>
   </top>
   <left>
      <AnchorPane prefWidth="20.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <AnchorPane prefWidth="20.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <VBox prefHeight="20.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
